#!/usr/bin/env ruby

$LOAD_PATH.unshift("lib")

require 'dllt'


EM.kqueue = true if EM.kqueue? # file watching requires kqueue on OSX

EventMachine::run do
  DLLT::Guard.start('dictionary/dictionary.txt')
  DLLT::Unison.start('9000')

  quit = Proc.new {
    EM.stop
  }

  Signal.trap "INT", quit
  Signal.trap "TERM", quit
end
